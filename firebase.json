{
  "firestore": {
    "rules": "firebase/firestore.rules",
    "indexes": "firebase/firestore/firestore.indexes.json"
  },
  "storage": {
    "rules": "firebase/storage/storage.rules"
  },
  "hosting": {
    "site": "personal-site-cms",
    "public": "./build",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
